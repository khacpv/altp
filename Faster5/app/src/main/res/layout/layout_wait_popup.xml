<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="@dimen/layout_marginLeft_40"
        android:layout_marginRight="@dimen/layout_marginRight_40"
        android:background="@drawable/xml_popup_bg_white"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textview_ready"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop_10"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:text="@string/title_wait_popup"
            android:textColor="#00366D"
            android:textSize="@dimen/text_size_huge" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_3"
            android:layout_marginTop="@dimen/layout_marginTop_10"
            android:background="#00366D" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/layout_marginTop_20">

            <Button
                android:id="@+id/btn_guide1"
                android:layout_width="@dimen/layout_width_40"
                android:layout_height="@dimen/layout_height_40"
                android:layout_marginLeft="@dimen/layout_marginLeft_30"
                android:layout_marginStart="@dimen/layout_marginLeft_30"
                android:background="@drawable/number_question"
                android:paddingBottom="@dimen/paddingBottom_3"
                android:paddingRight="@dimen/paddingRight_3"
                android:text="@string/second_wait_popup"
                android:textColor="#fff"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_guide1"
                android:layout_alignStart="@+id/btn_guide1"
                android:layout_marginLeft="@dimen/layout_marginLeft_70"
                android:layout_marginStart="@dimen/layout_marginRight_70"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/paddingTop_10"
                android:text="@string/help4_wait_popup"
                android:textColor="#00366D"
                android:textSize="@dimen/text_size_vsmall"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_guide2"
                android:layout_width="@dimen/layout_width_40"
                android:layout_height="@dimen/layout_height_40"
                android:layout_marginLeft="@dimen/layout_marginLeft_30"
                android:layout_marginStart="@dimen/layout_marginLeft_30"
                android:background="@drawable/save1"
                android:paddingBottom="@dimen/paddingBottom_3"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_guide2"
                android:layout_alignStart="@+id/btn_guide2"
                android:layout_marginLeft="@dimen/layout_marginLeft_70"
                android:layout_marginStart="@dimen/layout_marginRight_70"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/paddingTop_10"
                android:text="@string/help1_wait_popup"
                android:textColor="#00366D"
                android:textSize="@dimen/text_size_vsmall"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/btn_guide3"
                android:layout_width="@dimen/layout_width_40"
                android:layout_height="@dimen/layout_height_40"
                android:layout_marginLeft="@dimen/layout_marginLeft_30"
                android:layout_marginStart="@dimen/layout_marginLeft_30"
                android:background="@drawable/save2"
                android:paddingBottom="@dimen/paddingBottom_3"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_guide3"
                android:layout_alignStart="@+id/btn_guide3"
                android:layout_marginLeft="@dimen/layout_marginLeft_70"
                android:layout_marginStart="@dimen/layout_marginRight_70"
                android:ellipsize="end"
                android:lines="1"
                android:paddingTop="@dimen/paddingTop_10"
                android:text="@string/help2_wait_popup"
                android:textColor="#00366D"
                android:textSize="@dimen/text_size_vsmall"
                android:textStyle="bold" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/layout_marginBottom_20">

            <Button
                android:id="@+id/btn_guide4"
                android:layout_width="@dimen/layout_width_40"
                android:layout_height="@dimen/layout_height_40"
                android:layout_marginLeft="@dimen/layout_marginLeft_30"
                android:layout_marginStart="@dimen/layout_marginLeft_30"
                android:background="@drawable/save3"
                android:paddingBottom="@dimen/paddingBottom_3"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/btn_guide4"
                android:layout_alignStart="@+id/btn_guide4"
                android:layout_marginLeft="@dimen/layout_marginLeft_70"
                android:layout_marginStart="@dimen/layout_marginRight_70"
                android:lines="2"
                android:paddingTop="@dimen/paddingTop_10"
                android:text="@string/help3_wait_popup"
                android:textColor="#00366D"
                android:textSize="@dimen/text_size_vsmall"
                android:textStyle="bold" />
        </RelativeLayout>

        <TextView
            android:id="@+id/textview_wait_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/layout_marginBottom_30"
            android:layout_marginLeft="@dimen/layout_marginLeft_20"
            android:layout_marginRight="@dimen/layout_marginRight_20"
            android:ellipsize="end"
            android:gravity="center"
            android:lines="1"
            android:paddingLeft="@dimen/paddingLeft_10"
            android:paddingRight="@dimen/paddingRight_10"
            android:text="@string/text_wait_popup"
            android:textColor="#EEA542"
            android:textSize="@dimen/text_size_xlarge"
            android:textStyle="bold" />

        <!--<Button-->
            <!--android:id="@+id/button_cancel"-->
            <!--android:layout_width="@dimen/layout_width_250"-->
            <!--android:layout_height="@dimen/layout_height_50"-->
            <!--android:layout_gravity="center"-->
            <!--android:layout_marginBottom="@dimen/layout_marginBottom_20"-->
            <!--android:layout_marginLeft="@dimen/layout_marginLeft_30"-->
            <!--android:layout_marginRight="@dimen/layout_marginRight_30"-->
            <!--android:background="@drawable/answer_wrong"-->
            <!--android:paddingBottom="@dimen/paddingBottom_10"-->
            <!--android:text="@string/btn_cancel_wait_popup"-->
            <!--android:textAllCaps="false"-->
            <!--android:textColor="#ffffff"-->
            <!--android:textSize="@dimen/text_size_large"-->
            <!--android:textStyle="bold" />-->

    </LinearLayout>
</RelativeLayout>